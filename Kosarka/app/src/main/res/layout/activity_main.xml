<LinearLayout

    xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"

    android:layout_height="match_parent"

    android:orientation="vertical"

    tools:context=".MainActivity"
    android:background="@drawable/kosarka"
    >



    <LinearLayout

        android:layout_width="match_parent"

        android:layout_height="wrap_content"

        android:orientation="horizontal"


        >


        <LinearLayout

            android:layout_width="wrap_content"

            android:layout_height="match_parent"

            android:orientation="vertical"

            android:layout_weight="1">


            <TextView

                android:text="DomaÄ‡i:"
                android:background="#FFFF"
                android:textColor="#000000"
                android:layout_margin="10dp"

                android:layout_height="wrap_content"

                android:layout_width="match_parent"

                android:gravity="center_horizontal"

                android:textSize="20dp"

                />

            <TextView

                android:text="0"
                android:textColor="#000000"
                android:layout_width="match_parent"
                android:background="#FFFF"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:gravity="center_horizontal"

                android:textSize="25dp"

                android:id="@+id/domaci_rezultat"

                />

            <Button
                android:background="#283593"
                android:layout_width="match_parent"

                android:layout_height="48dp"

                android:layout_margin="16dp"

                android:text="+3"

                android:onClick="plus3domaci"/>

            <Button
                android:background="#3949ab"
                android:layout_width="match_parent"

                android:layout_height="48dp"

                android:layout_margin="16dp"

                android:text="+2"

                android:onClick="plus2domaci"/>

            <Button
                android:background="#5c6bc0"
                android:layout_width="match_parent"

                android:layout_height="48dp"

                android:layout_margin="16dp"

                android:text="SLOBODNO BACANJE"

                android:onClick="slobodnobacanjed"/>


        </LinearLayout>


        <LinearLayout

            android:layout_width="wrap_content"

            android:layout_height="wrap_content"

            android:orientation="vertical"

            android:layout_weight="1">

            <TextView

                android:text="Gosti:"

                android:textColor="#000000"
                android:layout_margin="10dp"
                android:background="#FFFF"
                android:layout_height="wrap_content"

                android:layout_width="match_parent"

                android:gravity="center_horizontal"

                android:textSize="20dp"

                />

            <TextView

                android:text="0"
                android:textColor="#000000"
                android:layout_width="match_parent"
                android:background="#FFFF"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:gravity="center_horizontal"

                android:textSize="25dp"

                android:id="@+id/gosti_rezultat"

                />

            <Button
                android:background="#283593"
                android:layout_width="match_parent"

                android:layout_height="48dp"

                android:layout_margin="16dp"

                android:text="+3"

                android:onClick="plus3gosti"/>

            <Button
                android:background="#3949ab"
                android:layout_width="match_parent"

                android:layout_height="48dp"

                android:layout_margin="16dp"

                android:text="+2"

                android:onClick="plus2gosti"/>

            <Button
                android:background="#5c6bc0"
                android:layout_width="match_parent"

                android:layout_height="48dp"

                android:layout_margin="16dp"

                android:text="SLOBODNO BACANJE"

                android:onClick="slobodnobacanjeg"/>


        </LinearLayout>


    </LinearLayout>

    <Button
        android:background="#2196f3"
        android:id="@+id/reset"

        android:layout_width="match_parent"

        android:layout_height="48dp"

        android:layout_margin="16dp"

        android:text="RESET"

        android:onClick="reset"

        android:orientation="horizontal"

        />



</LinearLayout>